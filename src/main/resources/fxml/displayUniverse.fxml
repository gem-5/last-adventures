<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import java.net.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <AnchorPane fx:id="map">
         <children>
            <GridPane fx:id="overlay" layoutX="14.0" prefWidth="564.0" style="-fx-color: #cccccc; -fx-padding: 5px; -fx-border-color: BLACK; -fx-border-radius: 20px; -fx-padding-radius: 20px;">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <GridPane fx:id="planetsInfo" alignment="CENTER" GridPane.columnSpan="2">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" />
                      <ColumnConstraints hgrow="SOMETIMES" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="1.7976931348623157E308" prefHeight="35.0" vgrow="NEVER" />
                      <RowConstraints maxHeight="1.7976931348623157E308" prefHeight="60.0" vgrow="NEVER" />
                      <RowConstraints maxHeight="1.7976931348623157E308" prefHeight="30.0" vgrow="NEVER" />
                      <RowConstraints maxHeight="1.7976931348623157E308" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints maxHeight="1.7976931348623157E308" prefHeight="30.0" vgrow="NEVER" />
                    </rowConstraints>
                     <children>
                        <Circle fill="DODGERBLUE" radius="30.0" stroke="BLACK" strokeType="INSIDE" GridPane.rowIndex="1" />
                        <Circle fill="RED" radius="30.0" stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                        <Circle fill="LIME" radius="30.0" stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                        <Circle fill="#aaaaaa" radius="30.0" stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                        <Label text="PlanetName-P" GridPane.halignment="CENTER">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Label>
                        <Label text="Environment" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label text="Government" GridPane.halignment="CENTER" GridPane.rowIndex="3">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label text="Tech Level" GridPane.halignment="CENTER" GridPane.rowIndex="4">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </GridPane>
                  <Button mnemonicParsing="false" onAction="#travelTo" text="Go" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
                  <Button mnemonicParsing="false" onAction="#hidePlanetsInfo" text="Hide" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
               </children>
            </GridPane>
         </children></AnchorPane>
    </center>
    <bottom>
        <HBox>
           <children>
            <TextField fx:id="errorLabel" editable="false" minWidth="0.0" prefWidth="0.0" style="-fx-text-fill: red;" HBox.hgrow="ALWAYS" />
               <Button onAction="#goBack" text="Return to Planet" HBox.hgrow="NEVER" />
               <Region HBox.Hgrow="ALWAYS" />
           </children>
        </HBox>
    </bottom>
    <stylesheets>
        <URL value="@/css/main.css" />
        <URL value="@/css/displayUniverse.css" />
    </stylesheets>

</BorderPane>
