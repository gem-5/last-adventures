<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane
    prefWidth="1280"
    prefHeight="720"
    xmlns:fx="http://javafx.com/fxml/1"
    >
  <top>
    <HBox><Region HBox.Hgrow="always"/>
    <Label
        fx:id="title"
        text="Combat!"
        />
    <Region HBox.Hgrow="always" /></HBox>
  </top>

  <center>
    <VBox>
      <padding><Insets left="250" /></padding>
      <Region VBox.Vgrow="always"/>
      <TextFlow>
        <Text styleClass="blocktext" fx:id="dialog" />
      </TextFlow>
      <Region VBox.Vgrow="always"/>
    </VBox>
  </center>
  <bottom>
    <HBox>
      <Region HBox.Hgrow="always" />
      <Button mnemonicParsing="false" fx:id="attack" onAction="#attackEnemy" text="Attack" GridPane.columnIndex="0" GridPane.rowIndex="7" />
      <Region minWidth="50" />
      <Button mnemonicParsing="false" fx:id="flee" onAction="#flee" text="Flee" GridPane.columnIndex="2" GridPane.rowIndex="7" />
      <Button mnemonicParsing="false" fx:id="cont" onAction="#continueToPlanet" text="Continue" GridPane.columnIndex="0" GridPane.rowIndex="7" />
      <Region HBox.Hgrow="always" />
    </HBox>
  </bottom>
  <stylesheets>
    <URL value="@/css/main.css"/>
  </stylesheets>
</BorderPane>
